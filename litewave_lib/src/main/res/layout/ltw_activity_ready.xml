<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReadyActivity"
    android:id="@+id/view"
    >

    <ImageView
        android:id="@+id/backgroundImage"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/chooseLevelLinearLayout">

        <ProgressBar
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:layout_alignParentTop="true"
            app:layout_marginTopPercent="20%"
            />

        <TextView
            android:id="@+id/eventStatusTextView"
            android:enabled="true"
            android:text=""
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/ltw_default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_widthPercent="90%"
            android:textSize="70px"
            android:gravity="center"
            android:layout_alignParentTop="true"
            app:layout_marginTopPercent="5%"
            />

        <ImageView
            android:id="@+id/levelCircleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            app:layout_widthPercent="25%"
            app:layout_marginBottomPercent="16%"
            />
        <TextView
            android:id="@+id/levelTextView"
            android:layout_above="@id/levelCircleImageView"
            android:enabled="true"
            android:text="level"
            android:textAlignment="center"
            android:textColor="@color/ltw_default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="55px"
            android:layout_marginBottom="40px"
            app:layout_widthPercent="25%"
            />
        <TextView
            android:id="@+id/levelNameTextView"
            android:enabled="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/ltw_default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="55px"
            android:layout_alignParentBottom="true"
            app:layout_widthPercent="25%"
            app:layout_marginBottomPercent="16%"
            />

        <ImageView
            android:id="@+id/sectionCircleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginBottomPercent="16%"
            />
        <TextView
            android:id="@+id/sectionTextView"
            android:layout_above="@id/sectionCircleImageView"
            android:enabled="true"
            android:text="section"
            android:textAlignment="center"
            android:textColor="@color/ltw_default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="55px"
            android:layout_marginBottom="40px"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="25%"
            />
        <TextView
            android:id="@+id/sectionNameTextView"
            android:enabled="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/ltw_default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="55px"
            android:layout_alignParentBottom="true"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginBottomPercent="16%"
            />

        <ImageView
            android:id="@+id/rowCircleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginBottomPercent="16%"
            />
        <TextView
            android:id="@+id/rowTextView"
            android:layout_above="@id/levelCircleImageView"
            android:enabled="true"
            android:text="row"
            android:textAlignment="center"
            android:textColor="@color/ltw_default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="55px"
            android:layout_marginBottom="40px"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="50%"
            />
        <TextView
            android:id="@+id/rowNameTextView"
            android:enabled="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/ltw_default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="55px"
            android:layout_alignParentBottom="true"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginBottomPercent="16%"
            />

        <ImageView
            android:id="@+id/seatCircleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="75%"
            app:layout_marginBottomPercent="16%"
            />
        <TextView
            android:id="@+id/seatTextView"
            android:layout_above="@id/levelCircleImageView"
            android:enabled="true"
            android:text="seat"
            android:textAlignment="center"
            android:textColor="@color/ltw_default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="55px"
            android:layout_marginBottom="40px"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="75%"
            />
        <TextView
            android:id="@+id/seatNameTextView"
            android:enabled="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/ltw_default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="55px"
            android:layout_alignParentBottom="true"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="75%"
            app:layout_marginBottomPercent="16%"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:text="JOIN"
            android:id="@+id/joinButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:textSize="30dp"
            android:textColor="#000000"
            app:layout_widthPercent="100%"
            />

    </android.support.percent.PercentRelativeLayout>


</RelativeLayout>
